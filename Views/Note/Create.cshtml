@model diary_course.Models.DTO.AddNoteDto

@{
    ViewBag.Title = "Создать заметку";
    Layout = "_Layout";
}

<form style="display: flex; flex-direction: column; justify-content: center; align-items: center" method="post" asp-action="Create">
    <h2>Создать заметку</h2>
    Дата:
    <input class="mb-2" placeholder="Дата" type="date" asp-for="Date"/>
    @if (Model.Datemiss)
    {
            <p style = "color:red">Введите дату</p>
    }
    Текст:
    <textarea rows="15" cols="200" style="width:70%;" placeholder="Текст" asp-for="Text"></textarea>
    
    Категория:
    <select asp-for="CategoryId">
        @foreach (var category in Model.Categories)
        {
            <option value="@category.Id">@category.Name</option>
        }
    </select>
    <br />
    
    <button class="btn btn-primary">Создать заметку</button>
</form>